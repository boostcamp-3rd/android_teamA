<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewHolder"
            type="com.aone.menurandomchoice.views.menuregister.adapter.viewholder.MenuCategoryViewHolder"/>

        <variable
            name="categoryItem"
            type="com.aone.menurandomchoice.views.menuregister.adapter.item.MenuCategoryItem"/>

    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_menu_category_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/middle_margin"
            android:paddingLeft="@dimen/middle_margin"
            android:paddingRight="@dimen/middle_margin"
            android:paddingTop="@dimen/small_margin"
            android:paddingBottom="@dimen/small_margin"
            android:textSize="@dimen/activity_menu_register_text"
            android:background="@drawable/item_menu_category_selector"
            android:textColor="@drawable/item_menu_category_text_color_selector"
            android:onClick="@{viewHolder::onClickItemView}" />

    </LinearLayout>

</layout>
